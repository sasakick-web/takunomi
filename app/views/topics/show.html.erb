<div class="container">
  <h1><%= @topic.title %></h1>
  <div id="message-container">
    <%= render '/messages/message' %>
    <%= render 'footer' %>
  </div>

  <div class="btn-area">
    <%# ログインユーザーかつ、ログインしているユーザーと投稿者の名前が同じ場合のみ編集・削除を表示 %>
      <% if user_signed_in? && current_user.id == @topic.user_id %>
        <%= link_to '編集' , edit_topic_path(@topic) , class: 'btn btn-primary' %>
        <%= link_to '削除' , topic_path(@topic) ,method: :delete , data: {confirm: '削除してもよろしいですか？'}, class: 'btn btn-danger' %>
      <% end %>
    </div>
</div>
